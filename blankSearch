<script>
	 function searchCheck(frm) {
		//검색
		var KeyValue = frm.keyWord.value;

		if ($.trim(KeyValue) == "") {
		/* 	 alert("검색 단어를 입력하세요.");  */
			$('#wordbox').val('');
			frm.keyWord.focus();
			frm.submit();
		}

		frm.submit();

	} 
	</script>

