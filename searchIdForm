<script language="javascript">
	function sub() {

		a = document.search.email1.value;
		b = document.search.email2.value;
		c = a + "@" + b;

		document.search.email.value = c;
		
		
		/* 3 칸으로 입력된 생년월일을 1 개로 연결하기 위한 함수 */
		h = document.search.birth1.value;
		i = document.search.birth2.value;
		j = document.search.birth3.value;
	
		k = h + i + j;
		
		document.search.birth.value = k;

		return true;
	}
</script>

